@model CreateProductVM

<h2 class="text-center">Додавання товару</h2>
<div class="d-flex justify-content-center w-50 m-auto">
    <form class="w-100 text-center bg-body-tertiary py-2 px-4"
          method="post"
          asp-controller="Product"
          asp-action="Create"
          enctype="multipart/form-data">
        <div>
            <label for="name" class="form-label mt-4">Назва</label>
            <input type="text" class="form-control" id="name" name="name">
            <small hidden class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div>
            <label for="description" class="form-label mt-4">Опис</label>
            <input type="text" class="form-control" id="description" name="description">
            <small hidden class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div>
            <label for="price" class="form-label mt-4">Ціна</label>
            <input type="number" class="form-control" id="price" name="price">
            <small hidden class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div>
            <label for="amount" class="form-label mt-4">Кількість</label>
            <input type="number" class="form-control" id="amount" name="amount">
            <small hidden class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div>
            <label for="color" class="form-label mt-4">Колір</label>
            <input type="text" class="form-control" id="color" name="color">
            <small hidden class="form-text text-muted">We'll never sh    are your email with anyone else.</small>
        </div>
        <div>
            <label for="image" class="form-label mt-4">Зображення</label>
            <input accept="image/*" type="file" class="form-control" id="image" name="image">
            <small hidden class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="text-center mt-3">
            <input class="btn btn-success w-25" type="submit" value="Додати">
            <a class="btn btn-dark w-25" asp-controller="Product" asp-action="Index">Назад</a>
        </div>
    </form>
</div>